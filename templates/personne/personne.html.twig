{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}

    <div class="row">   
        {% for personne in personnes %}
            <div class="card" style="width: 16rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ personne.name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname}} {{ personne.name}}</h6>
                    <p class="card-text">Age : {{ personne.age}}</p>
                    <a href="{{ path('personne.detail' , {id : personne.id} )}}" class="card-link"><i class="fa-solid text-primary fa-circle-info"></i></i></a>
                    <a href="{{ path('personne.edit' , {id : personne.id} )}}" class="card-link"><i class="fa-solid text-success fa-user-pen"></i></a>
                    <a href="{{ path('personne.delete' , {id : personne.id} )}}" class="card-link"><i class="text-danger fa-solid fa-user-xmark"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if isPaginated  is defined and isPaginated %}
        <nav aria-label="Page navigation example" class="mt-2">
            <ul class="pagination">
                {% if page !=  1 %}                
                    <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page: page - 1, nbre: nbre }) }}">Previous</a></li>              
                {% endif %}
                    {# #}
                

                {% for i in range(1, nbrePage) %}              
                    <li class="page-item">
                    <a class="page-link" href="{{ path('personne.list.alls', {page: i, nbre: nbre }) }}">{{ i }}
                    </a>
                    </li>
                {% endfor %}

                {% if page !=  nbrePage %}                
                    <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page: page + 1, nbre: nbre }) }}">Next</a></li>
                {% endif %}
                
            </ul>
        </nav>
    {% endif %}
    
{% endblock %}
