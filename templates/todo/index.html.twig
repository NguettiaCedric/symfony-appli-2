{% extends "template.html.twig" %}


{% block title %}
    Todo
{% endblock %}

{% block body %}
    
    {{ include('fragments/date-jour.html.twig')}}
    {% block pageTitles %}
        <h1>Liste des Todos</h1>
    {% endblock %}

    <ol class="list-group">
        {% for name, content in app.session.get('todos')%}
            <li class="list-group-item">
                {{ name }} : {{ content }}
            </li>
        {% endfor %}
    </ol>
{% endblock %}
